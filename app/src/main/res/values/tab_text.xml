<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyCustomTabLayout" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@color/tabSelectedTextColor</item>
        <item name="tabTextColor">@color/tabtextColor</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="fontFamily">@font/markpro</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TabText" parent="@style/Widget.AppCompat.TextView">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>