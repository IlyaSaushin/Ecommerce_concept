<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                app:layout_constraintTop_toTopOf="@id/location"
                app:layout_constraintEnd_toStartOf="@id/location"
                android:src="@drawable/locationicon"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:fontFamily="@font/markpro"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:id="@+id/down_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/location"
                app:layout_constraintStart_toEndOf="@id/location"
                android:layout_marginStart="10dp"
                android:src="@drawable/arrowdown2"
                />

            <ImageView
                android:id="@+id/filter"
                android:layout_width="19dp"
                android:layout_height="21dp"
                app:layout_constraintTop_toTopOf="@id/location"
                app:layout_constraintBottom_toBottomOf="@id/location"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"
                android:src="@drawable/filter"
                />

            <TextView
                android:id="@+id/select_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_category"
                android:fontFamily="@font/mark_pro_bold"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:id="@+id/viewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_all"
                android:textSize="15sp"
                android:fontFamily="@font/markpro"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/select_category"
                app:layout_constraintBottom_toBottomOf="@id/select_category"
                android:layout_marginEnd="20dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/category_recycler_item"
                app:layout_constraintTop_toBottomOf="@id/select_category"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="9dp"
                />

            <EditText
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="@string/search"
                android:fontFamily="@font/markpro"
                app:layout_constraintTop_toBottomOf="@id/category"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/qr_code_btn"
                android:background="@drawable/search_background"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:paddingStart="60dp"
                />

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lupa"
                app:layout_constraintTop_toTopOf="@id/search"
                app:layout_constraintBottom_toBottomOf="@id/search"
                app:layout_constraintStart_toStartOf="@id/search"
                android:layout_marginStart="10dp"
                android:paddingStart="15dp"
                />

            <ImageView
                android:id="@+id/qr_code_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_8726qrcodebtn"
                app:layout_constraintTop_toTopOf="@id/search"
                app:layout_constraintBottom_toBottomOf="@id/search"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:id="@+id/hot_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hot_sales"
                android:fontFamily="@font/mark_pro_bold"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/search"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:id="@+id/see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_more"
                android:textSize="15sp"
                android:fontFamily="@font/markpro"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/hot_sales"
                app:layout_constraintBottom_toBottomOf="@id/hot_sales"
                android:layout_marginEnd="20dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hot_sales_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/hotsales_recycler_item"
                app:layout_constraintTop_toBottomOf="@id/hot_sales"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/best_sellers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/best_seller"
                android:fontFamily="@font/mark_pro_bold"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hot_sales_recycler"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:id="@+id/see_more_bestsellers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_more"
                android:textSize="15sp"
                android:fontFamily="@font/markpro"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/best_sellers"
                app:layout_constraintBottom_toBottomOf="@id/best_sellers"
                android:layout_marginEnd="20dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/best_sellers_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/best_sellers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:flow_maxElementsWrap="2"
                app:spanCount="2"
                android:orientation="vertical"
                tools:listitem="@layout/bestsellers_recycler_item"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomSheet_layout"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collapsed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bottomsheet_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/expanded">

            <ImageView
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/explorer"
                app:layout_constraintBottom_toBottomOf="@id/explorer"
                android:src="@drawable/ellipse_1"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:id="@+id/explorer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/explorer"
                android:fontFamily="@font/markpro"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/dot"
                app:layout_constraintEnd_toStartOf="@id/bag"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="5dp"
                />

            <ImageView
                android:id="@+id/bag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/explorer"
                app:layout_constraintEnd_toStartOf="@id/heartBottomSheet"
                app:layout_constraintTop_toTopOf="@id/explorer"
                app:layout_constraintBottom_toBottomOf="@id/explorer"
                android:src="@drawable/bag"
                />

            <TextView
                android:id="@+id/items_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3"
                android:textColor="@color/white"
                android:fontFamily="@font/markpro"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:background="@drawable/done_btn_background"
                app:layout_constraintEnd_toEndOf="@id/bag"
                app:layout_constraintBottom_toBottomOf="@id/bag"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="15dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/heartBottomSheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/bag"
                app:layout_constraintTop_toTopOf="@id/explorer"
                app:layout_constraintEnd_toStartOf="@id/person"
                app:layout_constraintBottom_toBottomOf="@id/explorer"
                android:src="@drawable/heartbottomsheet"
                />

            <ImageView
                android:id="@+id/person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/heartBottomSheet"
                app:layout_constraintTop_toTopOf="@id/explorer"
                app:layout_constraintBottom_toBottomOf="@id/explorer"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/person"
                android:layout_marginEnd="30dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expanded"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/collapsed"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="7dp"
            android:background="@drawable/expanded_bottomsheet_background">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backk"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/filterr_options"
                app:layout_constraintTop_toTopOf="@id/filterr_options"
                app:layout_constraintBottom_toBottomOf="@id/filterr_options"
                />

            <TextView
                android:id="@+id/filterr_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_options"
                android:fontFamily="@font/markpro"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                app:layout_constraintStart_toEndOf="@id/back_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/done_btn"
                android:layout_marginTop="30dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/done_btn"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="@string/done"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/markpro"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/filterr_options"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/filterr_options"
                app:layout_constraintBottom_toBottomOf="@id/filterr_options"
                android:background="@drawable/done_btn_background"
                />

            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brand"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:fontFamily="@font/markpro"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/back_btn"
                app:layout_constraintStart_toStartOf="@id/back_btn"
                android:layout_marginTop="30dp"
                />

            <Spinner
                android:id="@+id/brand_spinner"
                android:layout_width="0dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@id/brand"
                app:layout_constraintStart_toStartOf="@id/back_btn"
                app:layout_constraintEnd_toEndOf="@id/done_btn"
                android:background="@drawable/filter_spinner_background"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:id="@+id/brand_spinner_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_spinner"
                app:layout_constraintTop_toTopOf="@id/brand_spinner"
                app:layout_constraintBottom_toBottomOf="@id/brand_spinner"
                app:layout_constraintEnd_toEndOf="@id/brand_spinner"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:fontFamily="@font/markpro"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/brand_spinner"
                app:layout_constraintStart_toStartOf="@id/back_btn"
                android:layout_marginTop="30dp"
                />

            <Spinner
                android:id="@+id/price_spinner"
                android:layout_width="0dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@id/price"
                app:layout_constraintStart_toStartOf="@id/back_btn"
                app:layout_constraintEnd_toEndOf="@id/done_btn"
                android:background="@drawable/filter_spinner_background"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:id="@+id/price_spinner_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_spinner"
                app:layout_constraintTop_toTopOf="@id/price_spinner"
                app:layout_constraintBottom_toBottomOf="@id/price_spinner"
                app:layout_constraintEnd_toEndOf="@id/price_spinner"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:fontFamily="@font/markpro"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/price_spinner"
                app:layout_constraintStart_toStartOf="@id/back_btn"
                android:layout_marginTop="30dp"
                />

            <Spinner
                android:id="@+id/size_spinner"
                android:layout_width="0dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@id/size"
                app:layout_constraintStart_toStartOf="@id/back_btn"
                app:layout_constraintEnd_toEndOf="@id/done_btn"
                android:background="@drawable/filter_spinner_background"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:id="@+id/size_spinner_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_spinner"
                app:layout_constraintTop_toTopOf="@id/size_spinner"
                app:layout_constraintBottom_toBottomOf="@id/size_spinner"
                app:layout_constraintEnd_toEndOf="@id/size_spinner"
                android:layout_marginEnd="20dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>