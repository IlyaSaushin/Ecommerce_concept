<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.SplashActivity"
    android:background="@color/textColor"
    app:shapeAppearanceOverlay="@style/AppCustomThemes.SplashShape">

    <FrameLayout
        android:id="@+id/splash_ring"
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/splahs_background"
        />

    <TextView
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:text="@string/ecommerce_concept"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/splash_ring"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>